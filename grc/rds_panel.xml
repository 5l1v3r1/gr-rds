<?xml version="1.0"?>
<!--
###################################################
##RDS Data Sink
###################################################
 -->
<block>
	<name>RDS Panel</name>
	<key>gr_rds_panel</key>
	<category>RDS</category>
	<import>from gnuradio import gr, rds</import>
	<make>#set $parent = $notebook() and 'self.%s.GetPage(%s)'%$notebook() or 'self'
rds.rdsPanel($(id)_msgq_in, $freq, $(parent).GetWin())
#if not $grid_pos()
$(parent).Add(self.$(id))
#else
$(parent).GridAdd(self.$(id), $(', '.join(map(str, $grid_pos()))))
#end if</make>
	<callback>clear_data();$reset;</callback>
	<callback>set_frequency($freq);</callback>
	
	<param>
		<name>Frequency</name>
		<key>freq</key>
		<value>0</value>
		<type>real</type>
		<hide>part</hide>
	</param>
	
	<param>
		<name>Reset</name>
		<key>reset</key>
		<value>0</value>
		<type>raw</type>
		<hide>part</hide>
	</param>
	
	<!--<param>
		<name>Window Size</name>
		<key>win_size</key>
		<value></value>
		<type>int_vector</type>
		<hide>#if $win_size() then 'none' else 'part'#</hide>
	</param>-->

	<param>
		<name>Grid Position</name>
		<key>grid_pos</key>
		<value></value>
		<type>grid_pos</type>
	</param>

	<param>
		<name>Notebook</name>
		<key>notebook</key>
		<value></value>
		<type>notebook</type>
	</param>

	<!--<check>not $win_size or len($win_size) == 2</check>-->
	
	<sink>
		<name>in</name>
		<type>message</type>
	</sink>
	<doc>Any change in Reset parameter will trigger clearing of panel data.
Frequency will manually set corresponding text on panel.</doc>
</block>
